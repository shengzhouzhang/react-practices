{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "isolatedModules": false,
    "jsx": "react",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "filesGlob": [
    "**/*.ts",
    "**/*.tsx",
    "!node_modules/**"
  ],
  "exclude": [],
  "atom": {
    "rewriteTsconfig": true
  },
  "files": [
    "typings/assertion-error/assertion-error.d.ts",
    "typings/chai/chai.d.ts",
    "typings/enzyme/enzyme.d.ts",
    "typings/lodash/lodash.d.ts",
    "typings/mocha/mocha.d.ts",
    "typings/react/react-dom.d.ts",
    "typings/react/react.d.ts",
    "typings/tsd.d.ts",
    "specs/components/menu/Menu.tsx",
    "specs/components/menu/MenuItem.tsx",
    "src/components/menu/Menu.tsx",
    "src/components/menu/MenuItem.tsx"
  ]
}
